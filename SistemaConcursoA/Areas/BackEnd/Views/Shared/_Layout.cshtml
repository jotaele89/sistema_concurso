@{
    Layout = null;
    string controlador = ViewContext.RouteData.Values["Controller"].ToString().ToLower();
    SistemaConcursoA.Models.Usuario usuario = new SistemaConcursoA.Models.Usuario().Obtener(SistemaConcursoA.Models.SessionHelper.GetUser());
    List<SistemaConcursoA.Models.Concurso> concurso = new SistemaConcursoA.Models.Concurso().listarconcurso();
    int idd = 0;
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Sistema Concurso de Proyectos</title>

    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">


    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">

    <link rel="stylesheet" href="~/assets/css/AdminLTE.min.css">

    <link rel="stylesheet" href="~/assets/css/skin-blue-light.css">

    <link href="~/assets/css/bootstrap-theme.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/assets/js/moment.min.js"></script>



    <style>
        .right {
            margin-left: 260px;
            margin-right: 20px;
            margin-bottom: 20px;
        }
    </style>


</head>





<body class="hold-transition skin-blue-light sidebar-mini">
    @if (controlador != "login")
    {
    <!-- Site wrapper -->

        <section id="container">

            <header class="main-header">
                <!-- Logo -->
                <a href="~/BackEnd/Home/Index" class="logo">
                    <!-- mini logo for sidebar mini 50x50 pixels -->
                    <span class="logo-mini"><b>EPIS</b></span>
                    <!-- logo for regular state and mobile devices -->
                    <span class="logo-lg"><b>Sistema Concurso de Proyectos</b></span>
                </a>
                <!-- Header Navbar: style can be found in header.less -->
                <nav class="navbar navbar-static-top">
                    <!-- Sidebar toggle button-->
                    <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>

                    <div class="navbar-custom-menu">
                        <ul class="nav navbar-nav">

                            <li class="dropdown user user-menu">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <img src="~/Server/Images/@usuario.avatar" class="user-image" alt="User Image">
                                    <span class="hidden-xs">@usuario.Persona.nombre, @usuario.Persona.apellido</span>
                                </a>
                                <ul class="dropdown-menu">

                                    <li class="user-header">
                                        <img src="~/Server/Images/@usuario.avatar" class="img-circle" alt="User Image">

                                        <p>
                                            @usuario.Persona.nombre, @usuario.Persona.apellido
                                            <small></small>
                                        </p>
                                    </li>

                                    <li class="user-footer">
                                        <div class="pull-left">
                                            <a href="~/BackEnd/Perfil" class="btn btn-default btn-flat"> Mi Perfil</a>
                                        </div>
                                        <div class="pull-right">
                                            <a href="~/Backend/Login/logout" class="btn btn-default btn-flat">Cerrar Sesion</a>
                                        </div>
                                    </li>
                                </ul>
                            </li>

                        </ul>
                    </div>
                </nav>
            </header>

            <aside class="main-sidebar dark">

                <section class="sidebar">

                    <div class="user-panel">
                        <div class="pull-left image">
                            <img src="~/Server/Images/@usuario.avatar" class="img-circle" alt="User Image">
                        </div>
                        <div class="pull-left info">
                            <p>@usuario.Persona.nombre, @usuario.Persona.apellido</p>

                        </div>
                    </div>

                    <ul class="sidebar-menu ">

                        @if (usuario.TipoUsuario1.nombre.Equals("Administrador"))
                        {

                            <li class="header">Menú de Navegación</li>

                            <li class="treeview">
                                <a href="#">
                                    <i class="fa fa-edit"></i> <span>Semestre</span>
                                    <span class="pull-right-container">
                                        <i class="fa fa-angle-left pull-right"></i>
                                    </span>
                                </a>
                                <ul class="treeview-menu">
                                    <li><a href="~/BackEnd/Semestre"><i class="fa fa-circle-o"></i> Semestre</a></li>
                                    <li class="treeview">
                                        <a href="#">
                                            <i class="fa fa-edit"></i> <span>Plan de Estudio</span>
                                            <span class="pull-right-container">
                                                <i class="fa fa-angle-left pull-right"></i>
                                            </span>
                                        </a>
                                        <ul class="treeview-menu">
                                            <li><a href="~/BackEnd/PlanEstudio"><i class="fa fa-circle-o"></i>Plan de Estudio</a></li>
                                            <li><a href="~/BackEnd/Ciclo"><i class="fa fa-circle-o"></i>Ciclo</a></li>
                                        </ul>
                                    </li>
                                </ul>
                            </li>





                            <li class="treeview">
                                <a href="#">
                                    <i class="fa fa-edit"></i> <span>Persona</span>
                                    <span class="pull-right-container">
                                        <i class="fa fa-angle-left pull-right"></i>
                                    </span>
                                </a>
                                <ul class="treeview-menu">
                                    <li><a href="~/BackEnd/Persona"><i class="fa fa-circle-o"></i> Persona</a></li>
                                    <li><a href="~/BackEnd/TipoPersona"><i class="fa fa-circle-o"></i>Tipo Persona</a></li>
                                </ul>
                            </li>



                            <li class="treeview">
                                <a href="~/BackEnd/Concurso">
                                    <i class="fa fa-edit"></i> <span>Concurso</span>
                                    <span class="pull-right-container">
                                        <i class="fa fa-angle-left pull-right"></i>
                                    </span>
                                </a>
                                <ul class="treeview-menu">
                                    <li><a href="~/BackEnd/Concurso"><i class="fa fa-circle-o"></i> Concurso</a></li>
                                    <li class="treeview">
                                        <a href="#">
                                            <i class="fa fa-edit"></i> <span>Proyecto</span>
                                            <span class="pull-right-container">
                                                <i class="fa fa-angle-left pull-right"></i>
                                            </span>
                                        </a>
                                        <ul class="treeview-menu">
                                            <li><a href="~/BackEnd/Proyecto"><i class="fa fa-circle-o"></i> Proyecto</a></li>

                                            <li><a href="~/BackEnd/ResultadoEvaluacion"><i class="fa fa-circle-o"></i> Resultado de evaluación</a></li>
                                            <li><a href="~/BackEnd/ResultadoGanadorCategoria"><i class="fa fa-circle-o"></i>Resultado de ganadores</a></li>
                                        </ul>
                                    </li>
                                    <li><a href="~/BackEnd/Premio"><i class="fa fa-circle-o"></i> Premio</a></li>
                                    <li><a href="~/BackEnd/Jurado"><i class="fa fa-circle-o"></i> Jurados</a></li>

                                    <li><a href="~/BackEnd/Categoria"><i class="fa fa-circle-o"></i> Categoría</a></li>
                                    <li><a href="~/BackEnd/Criterio"><i class="fa fa-circle-o"></i> Criterio</a></li>
                                    <li><a href="~/BackEnd/RangoEvaluacion"><i class="fa fa-circle-o"></i> Rango de evaluación</a></li>
                                </ul>
                            </li>

                            <li class="treeview">
                                <a href="#">
                                    <i class="fa fa-edit"></i> <span>Usuario</span>
                                    <span class="pull-right-container">
                                        <i class="fa fa-angle-left pull-right"></i>
                                    </span>
                                </a>
                                <ul class="treeview-menu">
                                    <li><a href="~/BackEnd/Usuario"><i class="fa fa-circle-o"></i> Usuario</a></li>
                                    <li><a href="~/BackEnd/TipoUsuario"><i class="fa fa-circle-o"></i>Tipo Usuario</a></li>
                                </ul>
                            </li>


                            <li class="treeview">
                                <a href="#">
                                    <i class="fa fa-edit"></i> <span>Consultas</span>
                                    <span class="pull-right-container">
                                        <i class="fa fa-angle-left pull-right"></i>
                                    </span>
                                </a>
                                <ul class="treeview-menu">
                                    <li><a href="~/BackEnd/Consulta01"><i class="fa fa-circle-o"></i>Proyectos por Categoría</a></li>

                                    @if (concurso.Count != 1)
                                    {
                                        idd = 0;
                                        foreach (var c in concurso)
                                        {
                                            idd = c.concurso_id;
                                            break;
                                        }
                                    }

                                    <li><a href="~/BackEnd/Consulta02/Index/@idd"><i class="fa fa-circle-o"></i>Proyectos por Orden y Horario</a></li>
                                    <li><a href="~/BackEnd/Consulta03/Index/@idd"><i class="fa fa-circle-o"></i>Proyectos Ganadores </a></li>
                                    <li><a href="~/BackEnd/Consulta04/Index/@idd"><i class="fa fa-circle-o"></i>Jurados por Categoría</a></li>
                                    <li><a href="~/BackEnd/Consulta05/Index/@idd"><i class="fa fa-circle-o"></i>Fichas de Evaluación </a></li>
                                    <li><a href="~/BackEnd/Consulta06/Index/@idd"><i class="fa fa-circle-o"></i>Cantidad de Proyectos </a></li>
                                    <li><a href="~/BackEnd/Consulta07/Index/@idd"><i class="fa fa-circle-o"></i>Evaluación de Proyectos </a></li>
                                </ul>
                            </li>


                            <li class="treeview">
                                <a href="#">
                                    <i class="fa fa-edit"></i> <span>Reportes</span>
                                    <span class="pull-right-container">
                                        <i class="fa fa-angle-left pull-right"></i>
                                    </span>
                                </a>
                                <ul class="treeview-menu">
                                    <li><a href="~/BackEnd/Consulta04Grafico/Index"><i class="fa fa-circle-o"></i>Puntaje categorias por concurso</a></li>
                                    <li><a href="~/BackEnd/Consulta08/Index"><i class="fa fa-circle-o"></i>Cantidad de proyectos</a></li>
                                    <li><a href="~/BackEnd/Consulta09/Index"><i class="fa fa-circle-o"></i>Cantidad de personas</a></li>
                                    <li><a href="~/BackEnd/Consulta10/Index"><i class="fa fa-circle-o"></i>Proyectos por Semestre</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="treeview">
                                <a href="~/BackEnd/Evaluacion">
                                    <i class="fa fa-edit"></i> <span>Evaluación</span>

                                </a>

                            </li>
                        }
                    </ul>



                </section>

            </aside>


            <section class="right"></section>





        </section>
    }
    <div class="right">

        @RenderBody()
    </div>
    <!-- ./wrapper -->
    <!-- jQuery 2.2.3 -->
    <script src="~/assets/js/jquery-2.2.3.min.js"></script>
    <!-- Bootstrap 3.3.6 -->
    <script src="~/assets/js/bootstrap.min.js"></script>
    <!-- SlimScroll -->
    <script src="~/assets/js/jquery.slimscroll.min.js"></script>

    <script src="~/assets/js/fastclick.js"></script>

    <script src="~/assets/js/app.min.js"></script>

    <script src="~/assets/js/demo.js"></script>


    <script src="~/assets/js/ini.js"></script>
    <script src="~/assets/js/jquery.form.js"></script>

    <script src="~/assets/js/jquery.validate.min.js"></script>
    <script src="~/assets/js/jquery.validate.unobtrusive.min.js"></script>

    <script src="~/assets/js/jquery.anexgrid.min.js"></script>

</body>
</html>
