@model SistemaConcursoA.Models.Usuario
@{
    ViewBag.Title = "Ver";
}

<h2>Ver</h2>
<ol class="breadcrumb">
    <li><a href="~/Backend/Usuario/Index">Usuario</a></li>
    <li class="active">@Model.nombre</li>
</ol>

<div class="panel panel-default">
    <div class="panel-heading">Información detallada del usuario</div>
    <div class="panel-body">
        <dl class="dl-horizontal">
            <dt>ID</dt>
            <dd>@Model.usuario_id</dd>
            <dt>Persona</dt>
            <dd>@Model.Persona.nombre</dd>
            <dt>Tipo usuario</dt>
            <dd>@Model.TipoUsuario1.nombre</dd>
            <dt>Nombre</dt>
            <dd>@Model.nombre</dd>
            <dt>Clave</dt>
            <dd>@Model.clave</dd>
            <dt>Avatar</dt>
            <dd>@Model.avatar</dd>
            <dt>Estado</dt>
            <dd>@Model.estado</dd>
        </dl>

    </div>
</div>