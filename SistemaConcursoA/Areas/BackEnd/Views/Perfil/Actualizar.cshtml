@model SistemaConcursoA.Models.Usuario
@{
    ViewBag.Title = "Perfil de Usuario";
}

<div class="page">
    <h1 class="page-header">
        Mi perfil personal
    </h1>

</div>

@using (Html.BeginForm("Actualizar", "Perfil", FormMethod.Post))
{

    <div class="tab-content">
        <div>
            <div role="tabpanel" class="active">
                <div class="form-group">
                    @Html.HiddenFor(x => x.usuario_id)
                    @Html.Label("Usuario")
                    @Html.TextBoxFor(x => x.nombre, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.nombre, null, new { @class = "label label-danger" })
                    <img src="~/Server/Images/" width="50" height="50" />
                </div>
                <div class="form-group">
                    <label>Avatar:</label>
                    <input type="file" name="Foto" />
                </div>
            </div>

        </div>

    </div>

    <div>
        <button data-ajax="true" class="btn btn-primary">Guardar</button>
        <a href="~/BackEnd/Home/Index" class="btn btn-danger">Cancelar</a>

    </div>
}
