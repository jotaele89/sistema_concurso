@model SistemaConcursoA.Models.Proyecto
@{
    SistemaConcursoA.Models.Proyecto proy = ViewBag.proyecto;
    SistemaConcursoA.Models.CursoDocente docente = ViewBag.docente;
    List<SistemaConcursoA.Models.ProyectoEstudiante> integrantes = ViewBag.integrantes;
}

<ol class="breadcrumb">
    <li><a href="~/Backend/Consulta03/Index">Regresar</a></li>
</ol>

<div class="panel panel-default">
    <div class="panel-heading">Información a Detalle del Proyecto</div>
    <div class="panel-body">
        <div class="form-group">
            <label>Nombre del Proyecto:</label>
            <input type="text" name="nombre_proyecto" disabled value="@proy.nombre_proyecto" class="form-control" />
        </div>
        <div class="form-group">
            <label>Curso:</label>
            <input type="text" name="curso" disabled value="@proy.Curso.nombre" class="form-control" />
        </div>
        <div class="form-group">
            <label>Docente:</label>
            @try
            {
                <input type="text" name="docente" disabled value="@docente.Persona.nombre @docente.Persona.apellido" class="form-control" />
            }
            catch (Exception e)
            {
                <input type="text" name="docente" disabled value="Ninguno" class="form-control" />
            }
        </div>
        <div class="form-group">
            <label>Categoría:</label>
            <input type="text" name="categoria" disabled value="@proy.Categoria.nombre" class="form-control" />
        </div>
        <br />
        <div class="panel panel-default">
            <div class="panel-heading">Integrantes del Proyecto</div>
            <div class="panel-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th style="width: 50px;">Código</th>
                            <th style="width: 200px;">Nombre</th>
                            <th style="width: 200px;">Apellido</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var m in integrantes)
                        {
                            <tr>
                                <th>@m.Persona.codigo</th>
                                <th>@m.Persona.nombre</th>
                                <th>@m.Persona.apellido</th>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>